                                    <p class="notification"></p>
									<p>Opciones</p>

                              </a>
                              <ul class="dropdown-menu">
																{% if app.user == null %}
																  <li><a href="{{path('login')}}">Entrar</a></li>
																{% else %}
																	<li><a href="{{path('logout')}}">Salir</a></li>
																{% endif %}
                              </ul>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-md-12">
                  <div class="card">
                    <div class="header">
                      <h4 class="title">
                        {% block titulo %}

                        {% endblock %}
                      </h4>
                    </div>
                    <div class="content">

                      {% block body %}

                      {% endblock %}
                    </div>

                  </div>
                </div>
              </div>
            </div>
        </div>


        <footer class="footer">
            <div class="container-fluid">
                <nav class="pull-left">

                </nav>
